{
  "name": "node_rest_api",
  "version": "1.0.0",
  "description": "Api REST with node and Typescript",
  "author": "Alejandro Saucedo Villanueva",
  "license": "ISC",
  "main": "server.js",
  "keywords": [
    "api",
    "rest",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/asaucedo777/node_rest_api.git"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "environment-dev": "ts-node src/environments/copy.environment.dev.ts",
    "environment-prod": "ts-node src/environments/copy.environment.prod.ts",
    "build": "tsc",
    "build-dev": "npm run environment-dev && tsc",
    "build-prod": "npm run environment-prod && tsc",
    "start": "node dist/server.js",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "debug": "npm run build-dev && npm run watch-debug",
    "test": "jest --forceExit --coverage --verbose"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "dotenv": "^8.1.0",
    "express": "4.16.4",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "pg": "^7.12.1",
    "shelljs": "^0.8.3",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/jest": "^24.0.18",
    "@types/pg": "^7.11.2",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "concurrently": "^4.1.0",
    "eslint": "^6.4.0",
    "node-sass": "4.12.0",
    "supertest": "4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "3.4.3"
  }
}
